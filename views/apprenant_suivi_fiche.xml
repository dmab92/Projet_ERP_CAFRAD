        <record model="ir.ui.view" id="view_fiche_suivi_cafrad_tree">
            <field name="name"> Fiches de Suivi des Apprenants</field>
            <field name="model">apprenant.cafrad.suivi.fiche</field>
            <field name="arch" type="xml">
                <tree string="Fiche de Suivi de l'Apprenant">
                    <field name="apprenant_id"/>
                    <field name="reponsable_id"/>
                    <field name="ane_academique_id"/>
                    <field name="class_room_id"/>
                    <field name="state_suivi" />
                </tree>
            </field>
        </record>


        <record id="view_all_apprenant_suivi_cafrad_graph" model="ir.ui.view">
            <field name="name">apprenant.cafrad.suivi.fiche.graph</field>
            <field name="model">apprenant.cafrad.suivi.fiche</field>
            <field name="arch" type="xml">
                <graph string="Suivi des apprenants">
                    <field name="apprenant_id" />
                    <field name="state_suivi" type="measure" groups="base.group_user" />
                </graph>
            </field>
        </record>

        <record id="view_fiche_suivi_cafrad_pivot" model="ir.ui.view">
            <field name="name">apprenant.cafrad.suivi.fiche.pivot</field>
            <field name="model">apprenant.cafrad.suivi.fiche</field>
            <field name="arch" type="xml">
                <pivot string="Suivi des apprenants">
                    <field name="apprenant_id" type="row"/>
                    <field name="class_room_id"  type="row"/>
                    <field name="state_suivi" type="measure"/>
                </pivot>
            </field>
        </record>

        <record model="ir.ui.view" id="view_fiche_suivi_cafrad_from">
            <field name="name">Fiches de Suivi des Apprenants</field>
            <field name="model">apprenant.cafrad.suivi.fiche</field>
            <field name="arch" type="xml">
                <form string="Emploi de temps">
                        <p class="oe_grey">
                                    Cr&#233;ez / &#233;ditez vos donnees pour le suivi des apprenants
                               </p>
                    <header>
                        <button name="print_fiche_suivi"
                                string="Imprimer la fiche de suivi du jeune"
                                type="object"
                                class="oe_highlight"
                                />
                        <button name="set_to_running"
                                string="En cours d'insertion"
                                type="object"
                                class="oe_highlight"
                                icon="fa-circle"
                                attrs="{'invisible': [('state_suivi','not in', ['draft'])]}"
                                />
                        insertalone
                        <button name="set_to_insert"
                                string="Inseré(e) dans une entreprise"
                                type="object"
                                class="oe_highlight"
                                icon="fa-check-circle"
                                attrs="{'invisible': [('state_suivi','not in', ['running'])]}"
                                />
                        <button name="set_to_insertalone"
                                string="Inseré(e) a son compte"
                                type="object"
                                class="oe_highlight"
                                icon="fa-check-circle"
                                attrs="{'invisible': [('state_suivi','not in', ['running'])]}"
                                />

                         <button name="set_to_draft"
                                string="Remettre en brouillon"
                                type="object"
                                attrs="{'invisible': [('state_suivi','not in', ['insert','insertalone'])]}"
                                />
                        <field name="state_suivi" widget="statusbar" statusbar_visible="draft,running,insertalone,insert" />
                    </header>
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="apprenant_id" options='{"no_open": True, "no_create": True}'/>
                            <field name="date_register" readonly="1"/>
                            <field name="ane_academique_id"  options='{"no_open": True, "no_create": True}'/>
                            <field name="apprenant_phone"  />
                            <field name="matricule" readonly="1" />
                            <field name="class_room_id" readonly="1" options='{"no_open": True, "no_create": True}'/>
                            <field name="reponsable_id"  options='{"no_open": True, "no_create": True}' />
                        </group>

                         <notebook colspan="4">
                            <page string="QUESTIONNAIRE">
                                    <group col="4" colspan="4">
                                        <field name="your_ambition" />
                                        <field name="your_passion" />
                                        <field name="your_quality"  />
                                        <field name="your_defaut" />
                                        <field name="why_formation"   />
                                        <field name="souhait_end"  />
                                        <field name="type_emploi_end" />
                                        <field name="why"   />
                                        <field name="end_word"   />
                                    </group>
                            </page>
                             <page string="ACCOMPAGNEMENT SOCIAL">
                                    <group col="4" colspan="4">
                                        <field name="date_nais" />
                                        <field name="lieu_nais" />
                                        <field name="sexe"  />
                                        <field name="email" />
                                        <field name="last_diplom"   />
                                        <field name="occupation"  />
                                        <field name="mobility" />
                                        <field name="why"   />
                                        <field name="end_word"   />
                                    </group>
                            </page>
                             <page string="ACCOMPAGNEMENT PEDAGOGIQUE">
                                    <group col="4" colspan="4">
                                        <field name="speciality_id" />
                                        <field name="date_start_training" />
                                        <field name="tutor_name"  />
                                        <field name="tutor_phone" />
                                        <field name="quarter_live"   />
                                        <field name="matiere_strong"  />
                                        <field name="matiere_wek" />
                                        <field name="disciplin_observ" />
                                        <field name="difficulty"   />
                                        <field name="solution"   />
                                        <field name="place_stage" />
                                    </group>
                            </page>
                             <page string="ACCOMPAGNEMENT A L'INSERTION PROFESSIONNELLE">
                                    <group col="4" colspan="4">
                                        <field name="nature_parchemin" />
                                        <field name="work_type" />
                                        <field name="work_expetation"  />
                                        <field name="done_activity" />
                                        <field name="result"   />
                                        <field name="first_job_location"  />
                                        <field name="first_job_date" />
                                        <field name="partener_insert"/>
                                        <field name="account_insert"/>

                                    </group>
                            </page>
                             <page string="FICHE DE SUIVI">
                                <field name="fiche_suivi_line_ids" nolabel="1" colspan="4">
                                    <tree string="Lignes de suivi" editable="top">
                                        <field name="date_suivi" />
                                        <field name="visit_or_call" />
                                        <field name="activity"/>
                                        <field name="person_call"/>
                                        <field name="activi_evolution" />
                                        <field name="difficulty"/>
                                        <field name="solution"  />
                                        <field name="date_rdv"/>
                                    </tree>
                                </field>
                            </page>
                             <page string="FICHE DE PLACEMENT EN STAGE PROFESSIONNEL">
                                    <group col="4" colspan="4">
                                        <field name="date_start_stage" />
                                        <field name="date_end_stage"/>
                                        <field name="theme_stage" />
                                        <field name="encadreur_aca" />
                                        <field name="encadreur_pro" />
                                    </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_fiche_suivi_cafrad_action" model="ir.actions.act_window">
            <field name="name">Fiches de suivi des apprenants</field>
            <field name="res_model">apprenant.cafrad.suivi.fiche</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form,graph,pivot</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                 Cr&#233;ez / &#233;ditez vos Fiches de suivi des apprenants
              </p><p>
                Cette interface vous permet d'enregistrer les informations sur vosFiches de suivi des apprenants
              </p>
            </field>
        </record>

</odoo>

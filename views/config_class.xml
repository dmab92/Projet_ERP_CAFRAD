<odoo>
    <!-- RELIGIONS-->
        <record model="ir.ui.view" id="view_religion_cafrad_tree">
            <field name="name">Les Religions</field>
            <field name="model">religion.cafrad</field>
            <field name="arch" type="xml">
                <tree string="Les Religions">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_religion_cafrad_from">
            <field name="name">Les Religions</field>
            <field name="model">religion.cafrad</field>
            <field name="arch" type="xml">
                <form string="Les religions">
                    <p class="oe_grey">
                                    Cr&#233;ez / &#233;ditez vos donn&#233;es sur les religions
                    </p>
                    <header>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                 <field name="name"/>

                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_religion_cafrad_action" model="ir.actions.act_window">
            <field name="name">Les religions </field>
            <field name="res_model">religion.cafrad</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Creez vos religions ici
              </p><p>
                Pour creer une  religion, cliquer sur le buton creer en haut a gauche de ce message
              </p>
            </field>
        </record>


